{
  "name": "amp-performance-visualization",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "repository": "https://github.com/kristoferbaxter/amp-performance-visualization",
  "author": "The AMP HTML Authors",
  "scripts": {
    "clear": "rimraf output build && mkdir -p output && mkdir -p build",
    "prestart": "mkdir -p ./server/results",
    "build:scraper": "tsc --project ./server",
    "build:client": "preact build --no-prerender --no-sw",
    "start": "run-s build:scraper start:scraper build:client start:client",
    "start:scraper": "node -r esm ./output/server/scraper/index.js",
    "start:client": "http-server ./build -s -o -c-1",
    "postbuild:scraper": "cp package.json ./output/package.json",
    "postbuild:client": "cp -r ./server/results build && cp -r ./config build",
    "server":"run-s build:server start:server",
    "client": "run-s build:client start:client",
    "lint": "tslint --project src",
    "test": "run-s build:scraper ava",
    "ava": "node -r esm ./node_modules/.bin/ava output/server/tests/*.js --verbose",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write --config ./.prettierrc",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "prettier --write --config ./.prettierrc-typescript",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/cli-spinner": "0.2.0",
    "@types/compression": "0.0.36",
    "@types/get-port": "4.2.0",
    "@types/jest": "23.3.10",
    "@types/jsdom": "12.2.4",
    "@types/mri": "1.1.0",
    "@types/node": "12.0.4",
    "@types/node-fetch": "2.3.7",
    "@types/progress": "2.0.3",
    "@types/puppeteer": "1.12.4",
    "@types/webpack-env": "1.13.9",
    "@types/yargs": "13.0.0",
    "argv": "0.0.2",
    "ava": "^2.2.0",
    "cli-spinner": "0.2.10",
    "css-loader": "1.0.1",
    "esm": "3.2.25",
    "husky": "1.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "per-env": "1.0.2",
    "preact-cli": "3.0.0-rc.3",
    "preact-render-spy": "1.3.0",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "ts-loader": "3.5.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-consistent-codestyle": "1.14.1",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "3.6.0",
    "typescript": "3.5.2",
    "typings-for-css-modules-loader": "1.7.0",
    "workerize-loader": "1.0.4",
    "yargs": "13.2.4"
  },
  "dependencies": {
    "@types/node-fetch": "2.3.7",
    "compression": "1.7.4",
    "esm": "3.2.25",
    "filenamify-url": "2.1.0",
    "get-port": "5.0.0",
    "http-server": "0.11.1",
    "jsdom": "15.1.1",
    "kleur": "3.0.3",
    "lru_map": "0.3.3",
    "mri": "1.1.4",
    "node-fetch": "2.6.1",
    "npm-run-all": "4.1.5",
    "polka": "0.5.2",
    "preact": "8.3.1",
    "preact-compat": "3.18.4",
    "preact-render-to-string": "4.1.0",
    "preact-router": "2.6.1",
    "progress": "2.0.3",
    "puppeteer": "1.18.1",
    "rimraf": "2.6.3",
    "sirv": "0.4.2"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)(spec|test).[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
